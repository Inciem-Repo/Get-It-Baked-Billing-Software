{
  "name": "get-it-baked",
  "private": true,
  "version": "1.0.3",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "react-dev": "vite",
    "react-build": "vite build",
    "react-preview": "vite preview",
    "electron-dev": "cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "dev": "concurrently \"npm run react-dev\" \"wait-on http://localhost:5173 && npm run electron-dev\"",
    "build": "npm run react-build && electron-builder",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "better-sqlite3": "^12.2.0",
    "electron-pos-printer": "^1.3.8",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.540.0",
    "mysql2": "^3.14.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.8.1",
    "react-to-print": "^3.1.1",
    "react-toastify": "^11.0.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.0.1",
    "cross-env": "^10.0.0",
    "electron": "^37.3.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "vite": "^7.1.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.mybilling.app",
    "productName": "Get It Baked Billing",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/baked-logo.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "publish": [
    {
      "provider": "github",
      "owner": "Inciem-Repo",
      "repo": "Get-It-Baked-Billing-Software"
    }
  ]
}
