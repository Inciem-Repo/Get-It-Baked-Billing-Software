<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kitchen Display System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <link rel="stylesheet" href="/css/kitchen.css" />
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="container mx-auto p-6">
      <!-- Header -->
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Orders</h1>
        <div class="text-sm text-gray-500">
          <span id="current-date"> Loading... </span>
        </div>
      </div>

      <!-- Filters -->
      <div class="flex gap-3 mb-6">
        <button
          class="filter-btn active px-4 py-2 rounded-lg border border-gray-300 bg-teal-700 text-white hover:bg-teal-800 transition-colors"
          data-filter="all"
        >
          All
        </button>
        <button
          class="filter-btn px-4 py-2 rounded-lg border border-gray-300 bg-white hover:bg-gray-50 transition-colors"
          data-filter="preparing"
        >
          On Process
        </button>
        <button
          class="filter-btn px-4 py-2 rounded-lg border border-gray-300 bg-white hover:bg-gray-50 transition-colors"
          data-filter="ready"
        >
          Completed
        </button>
      </div>
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
        id="orders-container"
      ></div>
    </div>
    <script src="/js/kitchen.js"></script>
  </body>
</html>
